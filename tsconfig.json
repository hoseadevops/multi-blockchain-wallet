{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "sourceMap": true,
        "noEmit": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "types": [
            "node",
            "mocha"
        ],
        "outFile": "dist/index",
        "emitDeclarationOnly": true,
        "declaration": true
    },

    "include": [
        "src/**/*.ts"
    ]
}
