{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "dist",
        "sourceMap": true,

        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "types": [
            "node",
            "mocha"
        ],

        "declaration": true,
        "declarationDir": "types"
    },

    "include": [
        "src/**/*.ts"
    ]
}