{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "sourceMap": true,
        "noEmit": false,
        "strictNullChecks": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,

        "types": [
            "node",
            "mocha"
        ],
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationDir": "dist/types",
    },

    "include": [
        "src/**/*.ts"
    ]
}
